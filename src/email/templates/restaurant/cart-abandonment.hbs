<table
  align="center"
  width="100%"
  border="0"
  cellpadding="0"
  cellspacing="0"
  role="presentation"
  style="padding: 0px 12px 25px 12px"
>
  <tbody>
    <tr>
      <td>
        <p
          style="
                                font-size: 14px;
                                line-height: 24px;
                                margin: 24px 0 0 0;
                                color: #333;
                              "
        >
          Hello
          {{name}},
        </p>
        <p
          style="
                                font-size: 14px;
                                line-height: 24px;
                                margin: 24px 0;
                                color: #333;
                              "
        >
          We noticed you left some delicious items in your cart, click the
          button below to continue placing your order!
        </p>

        <a
          href="{{buttonLink}}"
          style="
            line-height: 100%;
            text-decoration: none;
            display: block;
            max-width: 100%;
            margin: 10px 0;
            background-color: {{buttonBgColor}};
            border-radius: 6px;
            color: {{buttonTextColor}};
            font-size: 14px;
            font-weight: bold;
            text-align: center;
            padding: 10px 25px;
        "
          target="_blank"
        >

          Order Now

        </a>

      </td>
    </tr>
  </tbody>
</table>